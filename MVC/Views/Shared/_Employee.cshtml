@model MVC.Models.Employee
<table style="font-family:Arial; border:1px solid black; width: 300px">
    <tr>
        <td>
            <img height="75" width="75" src="@Url.Content("~/Photos/Penguins.jpg")" alt="@Model.Name" />
        </td>
        <td>
            <table>
                <tr>
                    <td><b>Age:</b></td>
                    <td>@Model.DateOfBirth</td>
                </tr>
                <tr>
                    <td><b>Gender:</b></td>
                    <td>@Model.Gender</td>
                </tr>
                <tr>
                    <td><b>City:</b></td>
                    <td>@Model.City</td>
                </tr>
            </table>
        </td>
    </tr>
</table>